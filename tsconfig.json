{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "strict": true,
    "module": "none",
    "rootDir": "src",
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "plugins": [{ "name": "typescript-tstl-plugin" }]
  },
  "references": [
    { "path": "src/client" },
    { "path": "src/server" }
  ],
  "tstl": {
    "luaTarget": "5.1",
    "luaLibImport": "inline",
    "noImplicitSelf": true
  }
}